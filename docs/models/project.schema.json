{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://open-needs.org/project.schema.json",
  "title": "Open-Needs Project schema",
  "type": "object",
  "properties": {
    "title": {
      "description": "An unique title inside an organization",
      "type":  "string"},
    "description": {"type":  "string"},
    "url": {"type":  "string"},
    "domains": {
      "type": "object",
      "patternProperties": {
        "project": {"type":  "object"},
        "^.*$": {
          "type": "object",
          "properties": {
            "types": {"type": "object"},
            "links": {"type": "object"},
            "options": {"type": "object"},
            "global_values": {"type": "object"}
          }
        }
      }
    }
  }
}
